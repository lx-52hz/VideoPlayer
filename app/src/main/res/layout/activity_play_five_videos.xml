<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fivevideo.PlayFiveVideosActivity">

        <LinearLayout
            android:id="@+id/surface_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginStart="6dp"
            android:layout_marginVertical="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <SurfaceView
                android:id="@+id/surface_1"
                android:layout_gravity="center_vertical"
                android:layout_width="368dp"
                android:layout_height="207dp"/>

            <SurfaceView
                android:id="@+id/surface_2"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_width="368dp"
                android:layout_height="207dp"/>

            <SurfaceView
                android:id="@+id/surface_3"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_width="368dp"
                android:layout_height="207dp"/>

            <SurfaceView
                android:id="@+id/surface_4"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_width="368dp"
                android:layout_height="207dp"/>

        </LinearLayout>

        <SurfaceView
            android:id="@+id/surface_5"
            android:layout_gravity="center_vertical"
            android:layout_width="1040dp"
            android:layout_height="585dp"
            app:layout_constraintStart_toEndOf="@id/surface_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/controller_btn"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/controller_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toEndOf="@+id/surface_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/surface_list">

            <Button
                android:id="@+id/play_btn"
                android:text="PLAY"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/back_btn"
                android:text="BACK"
                android:textSize="25sp"
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>