<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:id="@+id/play_video_with_gl"
            android:text="OpenGL-exoplayer"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="0"/>

        <Button
            android:id="@+id/play_media_player"
            android:text="OpenGL-mediaplayer"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="0"/>

        <Button
            android:id="@+id/play_clip_video"
            android:text="openGL-medaicodec"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_row="0"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="3"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_row="0"/>

        <Button
            android:id="@+id/play_1_video"
            android:text="播放1个视频-exoplayer"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="1"/>

        <Button
            android:id="@+id/play_5_video_huawei"
            android:text="播放5个视频-exoplayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="1"/>

        <Button
            android:id="@+id/play_5_video_media"
            android:text="播放5个视频-mediaplayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="2"/>


        <Button
            android:id="@+id/play_full_video"
            android:text="播放并且可以切到全屏-exoplayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_row="1"/>

    </GridLayout>
</layout>